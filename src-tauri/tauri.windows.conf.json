{
  "build": {
    "withGlobalTauri": true
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": [
          "$RESOURCE/_up_/dist/stat-crit-value-calculator/3rdpartylicenses.txt"
        ],
        "readFile": true
      },
      "window": {
        "create": true,
        "show": true,
        "close": true,
        "startDragging": true
      }
    },
    "bundle": {
      "identifier": "io.github.ccpl17.stat-crit-value-calculator",
      "targets": "nsis",
      "resources": [
        "../dist/stat-crit-value-calculator/3rdpartylicenses.txt"
      ],
      "windows": {
        "nsis": {
          "license": "../dist/stat-crit-value-calculator/3rdpartylicenses.txt",
          "headerImage": "nsis/headerImage.bmp",
          "sidebarImage": "nsis/sidebarImage.bmp",
          "installerIcon": "icons/icon.ico",
          "languages": [
            "TradChinese"
          ]
        }
      }
    }
  }
}
